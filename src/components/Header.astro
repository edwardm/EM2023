---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { MY_NAME } from "../consts";
import { MY_TITLE } from "../consts";
---

<div class="container">
	<header class="d-flex flex-wrap justify-content-center">
		<a
			href="/"
			class="logo d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
			<img src="/images/EM-Logo-Mark.svg" style="width: 100px;" alt={SITE_TITLE} />
			<span>
				<span class="logo-name">{MY_NAME}</span>
				<span class="logo-title">{MY_TITLE}</span>
			</span>
		</a>
		<ul class="nav nav-pills">
			<!-- <HeaderLink href="/">Home</HeaderLink> -->
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</ul>
	</header>
</div>
